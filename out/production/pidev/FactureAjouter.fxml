<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="636.0" style="-fx-background-color: #f3f4f6;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.FactureAjouterController">
    <children>

        <!-- Title for Ajouter Facture -->
        <Label layoutX="220.0" layoutY="49.0" style="-fx-text-fill: #37474f; -fx-font-size: 24px; -fx-font-weight: bold;" text="AJOUTER FACTURE" />

        <!-- Montant Field -->
        <Label layoutX="117.0" layoutY="167.0" style="-fx-text-fill: #37474f; -fx-font-size: 18px; -fx-font-weight: bold;" text="Montant:" />
        <TextField fx:id="txtAmount" layoutX="328.0" layoutY="161.0" prefWidth="200.0" style="-fx-background-color: #ffffff; -fx-border-color: #cfd8dc; -fx-border-radius: 5px; -fx-padding: 5px; -fx-font-size: 14px;" />

        <!-- Date Field -->
        <Label layoutX="117.0" layoutY="207.0" style="-fx-text-fill: #37474f; -fx-font-size: 18px; -fx-font-weight: bold;" text="Date:" />
        <DatePicker fx:id="datePicker" layoutX="328.0" layoutY="201.0" prefWidth="200.0" style="-fx-background-color: #ffffff; -fx-border-color: #cfd8dc; -fx-border-radius: 5px; -fx-padding: 5px; -fx-font-size: 14px;" />

        <!-- ID de Réservation Field -->
        <Label layoutX="117.0" layoutY="118.0" style="-fx-text-fill: #37474f; -fx-font-size: 18px; -fx-font-weight: bold;" text="ID de Réservation:" />
        <ComboBox fx:id="comboReservationId" layoutX="328.0" layoutY="112.0" prefWidth="200.0" style="-fx-background-color: #ffffff; -fx-border-color: #cfd8dc; -fx-border-radius: 5px; -fx-padding: 5px; -fx-font-size: 14px;" />

        <!-- Mode de Paiement Field -->
        <Label layoutX="117.0" layoutY="257.0" style="-fx-text-fill: #37474f; -fx-font-size: 18px; -fx-font-weight: bold;" text="Mode de Paiement:" />
        <ComboBox fx:id="comboModeDePaiement" layoutX="328.0" layoutY="251.0" prefWidth="200.0" style="-fx-background-color: #ffffff; -fx-border-color: #cfd8dc; -fx-border-radius: 5px; -fx-padding: 5px; -fx-font-size: 14px;" />

        <!-- Condition de Paiement Field -->
        <Label layoutX="117.0" layoutY="306.0" style="-fx-text-fill: #37474f; -fx-font-size: 18px; -fx-font-weight: bold;" text="Condition de Paiement:" />
        <ComboBox fx:id="comboConditionDePaiement" layoutX="328.0" layoutY="300.0" prefWidth="200.0" style="-fx-background-color: #ffffff; -fx-border-color: #cfd8dc; -fx-border-radius: 5px; -fx-padding: 5px; -fx-font-size: 14px;" />

        <!-- Add Facture Button -->
        <Button layoutX="160.0" layoutY="361.0" mnemonicParsing="false" onAction="#ajouter" prefHeight="40.0" prefWidth="290.0" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-border-radius: 10px; -fx-background-radius: 10px;                        -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 5);" text="Ajouter Facture" />

        <!-- Retour Button -->
        <Button layoutX="160.0" layoutY="411.0" mnemonicParsing="false" onAction="#retour" prefHeight="40.0" prefWidth="290.0" style="-fx-background-color: #5c6bc0; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-border-radius: 10px; -fx-background-radius: 10px;                        -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 5);" text="Retour" />

    </children>
</AnchorPane>
