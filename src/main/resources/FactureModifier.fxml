<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="317.0" prefWidth="508.0" style="-fx-background-color: #f3f4f6;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="Controllers.FactureModifierController">
    <children>
        <!-- Reservation ID -->
        <Label layoutX="14.0" layoutY="14.0" style="-fx-text-fill: #37474f; -fx-font-size: 18px; -fx-font-weight: bold;" text="Reservation ID:" />
        <TextField fx:id="txtReservationId" editable="false" layoutX="157.0" layoutY="10.0" prefWidth="200.0" style="-fx-background-color: #ffffff; -fx-border-color: #cfd8dc; -fx-border-radius: 5px; -fx-padding: 5px; -fx-font-size: 14px;" />

        <!-- Montant -->
        <Label layoutX="14.0" layoutY="54.0" style="-fx-text-fill: #37474f; -fx-font-size: 18px; -fx-font-weight: bold;" text="Montant:" />
        <TextField fx:id="txtAmount" layoutX="157.0" layoutY="50.0" prefWidth="200.0" style="-fx-background-color: #ffffff; -fx-border-color: #cfd8dc; -fx-border-radius: 5px; -fx-padding: 5px; -fx-font-size: 14px;" />

        <!-- Date -->
        <Label layoutX="14.0" layoutY="94.0" style="-fx-text-fill: #37474f; -fx-font-size: 18px; -fx-font-weight: bold;" text="Date:" />
        <DatePicker fx:id="dpDate" layoutX="157.0" layoutY="90.0" prefWidth="200.0" style="-fx-background-color: #ffffff; -fx-border-color: #cfd8dc; -fx-border-radius: 5px; -fx-padding: 5px; -fx-font-size: 14px;" />

        <!-- Buttons -->
        <Button layoutX="67.0" layoutY="180.0" onAction="#updateFacture" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #5c6bc0; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-border-radius: 10px; -fx-background-radius: 10px;                        -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 5);" text="Mettre à jour" />

        <Button layoutX="275.0" layoutY="180.0" onAction="#generateFacture" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #5c6bc0; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-border-radius: 10px; -fx-background-radius: 10px;                        -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 5);" text="Générer PDF" />

        <Button layoutX="175.0" layoutY="233.0" onAction="#goBack" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #5c6bc0; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-border-radius: 10px; -fx-background-radius: 10px;                        -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 5);" text="Retour" />
    </children>
</AnchorPane>
