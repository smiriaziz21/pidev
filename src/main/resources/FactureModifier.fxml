<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controllers.FactureModifierController" style="-fx-background-color: #f3f4f6;">

    <children>
        <Label layoutX="184.0" layoutY="75.0" text="Modifier Facture" style="-fx-text-fill: #37474f; -fx-font-size: 20px; -fx-font-weight: bold;" />

        <Label layoutX="184.0" layoutY="125.0" text="Montant:" style="-fx-text-fill: #37474f; -fx-font-size: 18px; -fx-font-weight: bold;" />
        <TextField fx:id="txtMontant" layoutX="328.0" layoutY="126.0" prefWidth="200.0" style="-fx-background-color: #ffffff; -fx-border-color: #cfd8dc; -fx-border-radius: 5px; -fx-padding: 5px; -fx-font-size: 14px;" />

        <Label layoutX="184.0" layoutY="165.0" text="Date:" style="-fx-text-fill: #37474f; -fx-font-size: 18px; -fx-font-weight: bold;" />
        <TextField fx:id="txtDate" layoutX="328.0" layoutY="166.0" prefWidth="200.0" style="-fx-background-color: #ffffff; -fx-border-color: #cfd8dc; -fx-border-radius: 5px; -fx-padding: 5px; -fx-font-size: 14px;" />

        <Label layoutX="184.0" layoutY="205.0" text="ID de Réservation:" style="-fx-text-fill: #37474f; -fx-font-size: 18px; -fx-font-weight: bold;" />
        <TextField fx:id="txtReservationId" layoutX="328.0" layoutY="206.0" prefWidth="200.0" style="-fx-background-color: #ffffff; -fx-border-color: #cfd8dc; -fx-border-radius: 5px; -fx-padding: 5px; -fx-font-size: 14px;" />

        <Button layoutX="160.0" layoutY="300.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="290.0"
                style="-fx-background-color: #5c6bc0; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-border-radius: 10px; -fx-background-radius: 10px;
                       -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 5);"
                onAction="#updateFacture" text="Mettre à jour Facture" />

        <Button layoutX="160.0" layoutY="360.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="290.0"
                style="-fx-background-color: #e53935; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-border-radius: 10px; -fx-background-radius: 10px;
                       -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 5);"
                onAction="#goBack" text="Retour" />
    </children>

</AnchorPane>
