<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.FeedbackAfficheController">
    <children>
        <!-- Search TextField -->
        <TextField fx:id="searchField" layoutX="50.0" layoutY="52.0" promptText="Search..." />

        <!-- Start Date Picker -->
        <DatePicker fx:id="dateDebut" layoutX="250.0" layoutY="20.0" promptText="Start Date" />

        <!-- End Date Picker -->
        <DatePicker fx:id="dateFin" layoutX="250.0" layoutY="50.0" promptText="End Date" />

        <!-- Table to display feedbacks -->
        <TableView fx:id="tablev" layoutX="27.0" layoutY="98.0" prefHeight="300.0" prefWidth="687.0">
            <columns>
                <TableColumn fx:id="colId" prefWidth="120.0" text="ID" />
                <TableColumn fx:id="colClientId" prefWidth="180.0" text="Client ID" />
                <TableColumn fx:id="colEventId" prefWidth="180.0" text="Event ID" />
                <TableColumn fx:id="colComment" prefWidth="180.0" text="Comment" />
                <TableColumn fx:id="colRating" prefWidth="120.0" text="Rating" />
                <TableColumn fx:id="colDate" prefWidth="180.0" text="Date" />
                <TableColumn fx:id="colActions" prefWidth="180.0" text="Actions" />
            </columns>
        </TableView>

        <!-- Add Button for Feedback -->
        <Button fx:id="btnAjouter" layoutX="50.0" layoutY="420.0" onAction="#openAddWindow" text="âž• Ajouter" />

        <!-- Filters Section -->
        <HBox layoutX="50.0" layoutY="470.0" spacing="10.0" />
         <!-- Client ID Filter -->
         <ComboBox fx:id="clientComboBox" layoutX="482.0" layoutY="52.0" prefWidth="180.0" promptText="Client ID" />
         <!-- Event ID Filter -->
         <ComboBox fx:id="eventComboBox" layoutX="483.0" layoutY="20.0" prefWidth="180.0" promptText="Event ID" />
    </children>
</AnchorPane>
