<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controllers.ModifierActiviteController" style="-fx-background-color: #f3f4f6;">
    <children>
        <Label layoutX="184.0" layoutY="75.0" text="Update Activity" style="-fx-text-fill: #37474f; -fx-font-size: 20px; -fx-font-weight: bold;" />

        <Label layoutX="184.0" layoutY="125.0" text="Name:" />
        <TextField fx:id="txtname" layoutX="328.0" layoutY="126.0" prefWidth="200.0" />

        <Label layoutX="184.0" layoutY="165.0" text="Description:" />
        <TextField fx:id="txtDescription" layoutX="328.0" layoutY="166.0" prefWidth="200.0" />

        <Label layoutX="184.0" layoutY="205.0" text="Location:" />
        <TextField fx:id="txtLocation" layoutX="328.0" layoutY="206.0" prefWidth="200.0" />

        <Label layoutX="184.0" layoutY="245.0" text="Start Date:" />
        <DatePicker fx:id="dpStartDate" layoutX="328.0" layoutY="245.0" prefWidth="200.0" />

        <Label layoutX="184.0" layoutY="285.0" text="End Date:" />
        <DatePicker fx:id="dpEndDate" layoutX="328.0" layoutY="285.0" prefWidth="200.0" />

        <Button layoutX="250.0" layoutY="340.0" text="Save" onAction="#updateActivity" style="-fx-background-color: #5c6bc0; -fx-text-fill: white;"/>
        <Button layoutX="200.0" layoutY="340.0" text="Back" onAction="#goBack" style="-fx-background-color: #5c6bc0; -fx-text-fill: white;"/>
    </children>
</AnchorPane>
