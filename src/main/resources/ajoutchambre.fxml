<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controllers.Ajouterunechambre"
            style="-fx-padding: 20px;">

    <children>
        <!-- Titre -->
        <Label layoutX="20.0" layoutY="20.0"
               text="Ajouter une chambre"
               style="-fx-font-family: 'Segoe UI'; -fx-font-size: 26px; -fx-text-fill: #333333;"/>

        <!-- Matricule Hotel -->
        <Label layoutX="20.0" layoutY="80.0"
               text="Matricule Hotel"
               style="-fx-font-family: 'Segoe UI'; -fx-font-size: 18px; -fx-text-fill: #555555;"/>
        <TextField fx:id="tfHotelId" layoutX="160.0" layoutY="80.0"
                   prefHeight="30.0" prefWidth="290.0"
                   promptText="Matricule de l'hotel"
                   style="-fx-font-size: 16px; -fx-background-color: #ffffff; -fx-border-radius: 5px; -fx-border-color: #ccc;"/>

        <!-- Numéro de chambre -->
        <Label layoutX="20.0" layoutY="120.0"
               text="Numéro"
               style="-fx-font-family: 'Segoe UI'; -fx-font-size: 18px; -fx-text-fill: #555555;"/>
        <TextField fx:id="tfRoomNumber" layoutX="160.0" layoutY="120.0"
                   prefHeight="30.0" prefWidth="290.0"
                   promptText="Numéro de la chambre"
                   style="-fx-font-size: 16px; -fx-background-color: #ffffff; -fx-border-radius: 5px; -fx-border-color: #ccc;"/>

        <!-- Capacité -->
        <Label layoutX="20.0" layoutY="160.0"
               text="Capacité"
               style="-fx-font-family: 'Segoe UI'; -fx-font-size: 18px; -fx-text-fill: #555555;"/>
        <TextField fx:id="tfCapacity" layoutX="160.0" layoutY="160.0"
                   prefHeight="30.0" prefWidth="290.0"
                   promptText="Nombre de personnes"
                   style="-fx-font-size: 16px; -fx-background-color: #ffffff; -fx-border-radius: 5px; -fx-border-color: #ccc;"/>

        <!-- Bouton Ajouter -->
        <Button layoutX="160.0" layoutY="200.0"
                mnemonicParsing="false"
                onAction="#handleAddRoom"
                style="-fx-background-color: #5c6bc0; -fx-text-fill: white; -fx-font-size: 18px; -fx-border-radius: 5px;"
                text="Ajouter la chambre"/>
    </children>
</AnchorPane>