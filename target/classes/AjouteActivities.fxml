<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.AjouterActiviteController" style="-fx-background-color: #f3f4f6;">
    <children>
        <Label layoutX="184.0" layoutY="125.0" text="Nom:" style="-fx-text-fill: #37474f; -fx-font-size: 18px; -fx-font-weight: bold;" />
        <TextField fx:id="txtname" layoutX="328.0" layoutY="126.0" prefWidth="200.0" style="-fx-background-color: #ffffff; -fx-border-color: #cfd8dc; -fx-border-radius: 5px; -fx-padding: 5px; -fx-font-size: 14px;" />

        <Label layoutX="184.0" layoutY="165.0" text="Description:" style="-fx-text-fill: #37474f; -fx-font-size: 18px; -fx-font-weight: bold;" />
        <TextArea fx:id="txtDescription" layoutX="328.0" layoutY="166.0" prefWidth="200.0" style="-fx-background-color: #ffffff; -fx-border-color: #cfd8dc; -fx-border-radius: 5px; -fx-padding: 5px; -fx-font-size: 14px;" />

        <Label layoutX="184.0" layoutY="205.0" text="Start Date:" style="-fx-text-fill: #37474f; -fx-font-size: 18px; -fx-font-weight: bold;" />
        <DatePicker fx:id="dpStartDate" layoutX="328.0" layoutY="206.0" prefWidth="200.0" />

        <Label layoutX="184.0" layoutY="245.0" text="End Date:" style="-fx-text-fill: #37474f; -fx-font-size: 18px; -fx-font-weight: bold;" />
        <DatePicker fx:id="dpEndDate" layoutX="328.0" layoutY="246.0" prefWidth="200.0" />

        <Label layoutX="184.0" layoutY="285.0" text="Location:" style="-fx-text-fill: #37474f; -fx-font-size: 18px; -fx-font-weight: bold;" />
        <TextField fx:id="txtLocation" layoutX="328.0" layoutY="286.0" prefWidth="200.0" style="-fx-background-color: #ffffff; -fx-border-color: #cfd8dc; -fx-border-radius: 5px; -fx-padding: 5px; -fx-font-size: 14px;" />

        <Label layoutX="184.0" layoutY="325.0" text="Responsible ID:" style="-fx-text-fill: #37474f; -fx-font-size: 18px; -fx-font-weight: bold;" />
        <TextField fx:id="txtResponsibleId" layoutX="328.0" layoutY="326.0" prefWidth="200.0" style="-fx-background-color: #ffffff; -fx-border-color: #cfd8dc; -fx-border-radius: 5px; -fx-padding: 5px; -fx-font-size: 14px;" />

        <Label layoutX="184.0" layoutY="365.0" text="Category:" style="-fx-text-fill: #37474f; -fx-font-size: 18px; -fx-font-weight: bold;" />
        <HBox layoutX="328.0" layoutY="366.0" spacing="10">
            <ComboBox fx:id="cbCategory" prefWidth="150.0" editable="true" />
            <Button text="Add Category" onAction="#openAddCategoryWindow" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 5px; -fx-border-radius: 5px; -fx-background-radius: 5px;" />
        </HBox>

        <Button layoutX="160.0" layoutY="420.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="290.0"
                style="-fx-background-color: #5c6bc0; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-border-radius: 10px; -fx-background-radius: 10px;
                       -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 5);"
                onAction="#ajouterActivite" text="Ajouter" />
    </children>
</AnchorPane>