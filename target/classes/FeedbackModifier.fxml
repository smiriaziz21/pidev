<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.collections.FXCollections?>

<?import java.lang.Integer?>
<?import javafx.scene.control.TextField?>
<AnchorPane prefHeight="317.0" prefWidth="508.0" style="-fx-background-color: #f3f4f6;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="Controllers.FeedbackModifierController">
    <children>
        <!-- Client ID -->
        <Label layoutX="14.0" layoutY="14.0" style="-fx-text-fill: #37474f; -fx-font-size: 18px; -fx-font-weight: bold;" text="Client ID:" />
        <TextField fx:id="txtClientId" editable="false" layoutX="157.0" layoutY="10.0" prefWidth="200.0" style="-fx-background-color: #ffffff; -fx-border-color: #cfd8dc; -fx-border-radius: 5px; -fx-padding: 5px; -fx-font-size: 14px;" />

        <!-- Event ID -->
        <Label layoutX="14.0" layoutY="54.0" style="-fx-text-fill: #37474f; -fx-font-size: 18px; -fx-font-weight: bold;" text="Event ID:" />
        <TextField fx:id="txtEventId" editable="false" layoutX="157.0" layoutY="50.0" prefWidth="200.0" style="-fx-background-color: #ffffff; -fx-border-color: #cfd8dc; -fx-border-radius: 5px; -fx-padding: 5px; -fx-font-size: 14px;" />

        <!-- Comment -->
        <Label layoutX="14.0" layoutY="94.0" style="-fx-text-fill: #37474f; -fx-font-size: 18px; -fx-font-weight: bold;" text="Commentaire:" />
        <TextArea fx:id="txtComment" layoutX="157.0" layoutY="90.0" prefWidth="200.0" prefHeight="80.0" style="-fx-background-color: #ffffff; -fx-border-color: #cfd8dc; -fx-border-radius: 5px; -fx-padding: 5px; -fx-font-size: 14px;" />

        <!-- Rating -->
        <Label layoutX="14.0" layoutY="194.0" style="-fx-text-fill: #37474f; -fx-font-size: 18px; -fx-font-weight: bold;" text="Évaluation:" />
        <ComboBox fx:id="comboRating" layoutX="157.0" layoutY="190.0" prefWidth="200.0" style="-fx-background-color: #ffffff; -fx-border-color: #cfd8dc; -fx-border-radius: 5px; -fx-padding: 5px; -fx-font-size: 14px">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <Integer fx:value="1" />
                    <Integer fx:value="2" />
                    <Integer fx:value="3" />
                    <Integer fx:value="4" />
                    <Integer fx:value="5" />
                </FXCollections>
            </items>
        </ComboBox>

        <!-- Date -->
        <Label layoutX="14.0" layoutY="234.0" style="-fx-text-fill: #37474f; -fx-font-size: 18px; -fx-font-weight: bold;" text="Date:" />
        <DatePicker fx:id="dpDate" layoutX="157.0" layoutY="230.0" prefWidth="200.0" style="-fx-background-color: #ffffff; -fx-border-color: #cfd8dc; -fx-border-radius: 5px; -fx-padding: 5px; -fx-font-size: 14px;" />

        <!-- Buttons -->
        <Button layoutX="67.0" layoutY="270.0" onAction="#updateFeedback" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #5c6bc0; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 5);" text="Mettre à jour" />

        <Button layoutX="275.0" layoutY="270.0" onAction="#goBack" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #5c6bc0; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 5);" text="Retour" />
    </children>
</AnchorPane>
