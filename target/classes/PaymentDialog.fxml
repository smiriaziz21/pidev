<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" style="-fx-background-color: #f3f4f6;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.StripePaymentController">
    <children>
        <!-- Title -->
        <Label layoutX="120.0" layoutY="30.0" style="-fx-text-fill: #37474f; -fx-font-size: 24px; -fx-font-weight: bold;" text="Détails du Paiement" />

        <!-- Card Number -->
        <Label layoutX="50.0" layoutY="80.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Numéro de carte:" />
        <TextField fx:id="txtCardNumber" layoutX="150.0" layoutY="80.0" prefWidth="200.0" style="-fx-background-color: #ffffff; -fx-border-color: #cfd8dc; -fx-border-radius: 5px;" />

        <!-- Expiration Date -->
        <Label layoutX="50.0" layoutY="120.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Date d'expiration:" />
        <TextField fx:id="txtExpirationDate" layoutX="150.0" layoutY="120.0" prefWidth="100.0" style="-fx-background-color: #ffffff; -fx-border-color: #cfd8dc; -fx-border-radius: 5px;" />

        <!-- CVV -->
        <Label layoutX="50.0" layoutY="160.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="CVV:" />
        <TextField fx:id="txtCVV" layoutX="150.0" layoutY="160.0" prefWidth="100.0" style="-fx-background-color: #ffffff; -fx-border-color: #cfd8dc; -fx-border-radius: 5px;" />

        <!-- Payment Button -->
        <Button layoutX="150.0" layoutY="200.0" mnemonicParsing="false" onAction="#processPayment" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="Payer" />
    </children>
</AnchorPane>
